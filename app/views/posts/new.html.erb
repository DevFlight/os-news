<div class="flex flex-col bg-blue-100 mx-auto sm:mx-32 py-4">
  <%= form_for @post do |f| %>
    <p class=pl-8>
      <label class=>title</label>
      <%= f.text_field :title, size: "41x1" %> 
    </p>

    <p class="pl-8 mt-2">
      <label class="pr-2">url</label>
      <%= f.url_field :link, size: "41x1" %> 
    </p>

    <p class="pl-16 mt-2 mb-2">
      or
    </p>

    <label class="pl-8"> text <%= f.text_area :body, size: "40x3" %> </label>

    <div class="container pl-8 mt-4">
      <%= f.submit "submit", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-2 rounded" %>
    </div>
  <% end %>

</div>
